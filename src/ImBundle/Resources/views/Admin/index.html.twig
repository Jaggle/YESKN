{% extends '@App/Admin/layout.html.twig' %}

{% block content %}

    <section class="content-header">
        <h1>
            推送测试
            <small>Control panel</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Dashboard</li>
        </ol>
    </section>

    <section class="content">

        {% if app.session.started and app.session.flashBag.peekAll is not empty %}
            <div class="messages" style="margin-top: 20px">
                {% for type, messages in app.session.flashBag.all %}
                    {% for message in messages %}
                        {% if type == 'message' %}
                            {%  set type = 'info' %}
                        {% endif %}
                        {# Bootstrap alert, see http://getbootstrap.com/components/#alerts #}
                        <div class="alert alert-dismissible alert-{{ type }}" role="alert">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>

                            {{ message|trans }}
                        </div>
                    {% endfor %}
                {% endfor %}
            </div>
        {% endif %}
        <!-- Small boxes (Stat box) -->
        <div class="row">


            <div class="col-lg-6">

                <form action="{{ path('admin_push') }}" method="post">
                    <div class="input-group">
                        <input type="hidden" name="type" value="publish">
                        <input type="text" class="form-control" title="" name="content"/>
                          <span class="input-group-btn">
                        <input type="submit" class="btn btn-default" value="推送">
                     </span>
                    </div>
                </form>

            </div>
        </div>
    </section>

{% endblock %}